<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFG_UOC_2024.APP.Views.MainRecipeView"
             Title="New recipe"
             Shell.BackgroundColor="BlueViolet"
             Shell.TabBarIsVisible="False">
    <ContentPage.Content>
         <StackLayout BackgroundColor="BlueViolet" Opacity="0.5" >
            <Grid Margin="20,35,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Frame CornerRadius="10" Padding="10" VerticalOptions="End" Grid.Row="1" HeightRequest="200">
                    <StackLayout>
                        <Label Text="Do you want to generate a new recipe?" FontSize="Large" HorizontalOptions="Center" Margin="10" />
                        <Button Text="Ok" HorizontalOptions="Center" Margin="50">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Button_Clicked" />
                            </Button.GestureRecognizers>
                        </Button>
                    </StackLayout>
                </Frame>

            </Grid>
        </StackLayout>

    </ContentPage.Content>

</ContentPage>
    
    